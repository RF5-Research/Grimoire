<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        xmlns:styles="clr-namespace:Material.Styles;assembly=Material.Styles"
        x:Class="Grimoire.GUI.Views.MainWindow"
        Title="Grimoire">
	<Grid ColumnDefinitions="*,Auto">
		<DataGrid Grid.Column="0"
				  Name="ProjectDataGrid"
				  SelectedIndex="{Binding SelectedIndex}"
				  IsReadOnly="True"
				  CanUserResizeColumns="True"
				  CanUserReorderColumns="False">
			<DataGrid.Columns>
				<DataGridTextColumn Width="0.4*" Header="Name" Binding="{Binding Name}"/>
				<DataGridTextColumn Width="*" Header="ROM Path" Binding="{Binding ROMPath}" />
				<DataGridTextColumn Width="*" Header="Project Path" Binding="{Binding ProjectPath}" />
			</DataGrid.Columns>
		</DataGrid>
		<StackPanel Grid.Column="1">
			<Button Name="NewProjectButton" Content="New project"/>
			<Button Name="OpenProjectButton" Content="Open project" IsEnabled="{Binding IsButtonEnabled}"/>
			<Button Name="DeleteProjectButton" Content="Delete project" IsEnabled="{Binding IsButtonEnabled}"/>
			<Button Name="ProjectSettingsButton" Content="Project settings" IsEnabled="{Binding IsButtonEnabled}"/>
		</StackPanel>
	</Grid>
</Window>
