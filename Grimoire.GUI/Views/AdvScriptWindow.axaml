<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Grimoire.GUI.Views.AdvScriptWindow"
        xmlns:Controls="clr-namespace:Grimoire.GUI.Controls"
        Icon="/Assets/avalonia-logo.ico"
		Padding="0" 
        Title="Script Editor">

	<Grid ColumnDefinitions="Auto,*">
		<StackPanel Margin="0" Spacing="0" Grid.Column="0">
			<ListBox Items="{Binding ScriptList}" SelectedIndex="{Binding SelectedItem}" Width="300">
				<ListBox.ItemTemplate>
					<DataTemplate>
						<TextBlock Text="{Binding}" />
					</DataTemplate>
				</ListBox.ItemTemplate>
			</ListBox>
		</StackPanel>
		<Controls:TextEditorControl Grid.Column="1" Name="Editor" Text="{Binding ScriptText}" DockPanel.Dock="Right"/>
		<!--<TextBox AcceptsReturn="True" FontFamily="Microsoft YaHei,Simsun,苹方-简,宋体-简" TextWrapping="Wrap" Text="{Binding ScriptText}" Height="500" Width="800"/>-->
	</Grid>
</Window>
