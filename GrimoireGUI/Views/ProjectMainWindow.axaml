<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="GrimoireGUI.Views.ProjectMainWindow"
        Title="Grimoire">

	<DockPanel>
		<Menu DockPanel.Dock="Top">
			<MenuItem Header="_File">
				<MenuItem Name="SaveMenuItem" Header="Save"/>
				<MenuItem Name="CloseMenuItem" Header="Close"/>
			</MenuItem>
		</Menu>
		<Grid>
			<StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
				<StackPanel.Styles>
					<Style Selector="Button">
						<Setter Property="HorizontalAlignment" Value="Stretch"/>
					</Style>
				</StackPanel.Styles>
				<Button Name="AssetsButton" Content="Assets"/>
				<!--<Button Name="CharactersButton" Content="Characters"/>-->
				<Button Name="ScriptEditorButton" Content="Script Editor"/>
				<Button Name="RigbarthScriptEditorButton" Content="Rigbarth Script Editor"/>
			</StackPanel>
		</Grid>
	</DockPanel>
</Window>
