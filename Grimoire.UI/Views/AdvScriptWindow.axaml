<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Grimoire.UI.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Grimoire.UI.Views.AdvScriptWindow"
        xmlns:Controls="clr-namespace:Grimoire.UI.Controls;assembly=Grimoire.UI"
        Icon="/Assets/avalonia-logo.ico"
        Title="Grimoire.UI">

    <!--<Design.DataContext>
        <vm:AdvScriptWindowViewModel/>
    </Design.DataContext>-->

	<DockPanel>
		<StackPanel DockPanel.Dock="Left">
			<ListBox Items="{Binding ScriptNamesList}" SelectedIndex="{Binding SelectedIndex}" Width="300">
				<ListBox.ItemTemplate>
					<DataTemplate>
						<TextBlock Text="{Binding}" />
					</DataTemplate>
				</ListBox.ItemTemplate>
			</ListBox>
		</StackPanel>
		<Controls:TextEditorControl Name="Editor" Text="{Binding ScriptText}" DockPanel.Dock="Right"/>
		<!--<TextBox AcceptsReturn="True" FontFamily="Microsoft YaHei,Simsun,苹方-简,宋体-简" TextWrapping="Wrap" Text="{Binding ScriptText}" Height="500" Width="800"/>-->
	</DockPanel>
</Window>
